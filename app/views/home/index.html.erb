<h1> Vintage Vinyls </h1>
<div class="row mt-5">
    <% @vinyls.each do |vinyl|%>
    <div class="col-md-4 mt-5">
        <div class="card" >
           <% if vinyl.pictures.first %>
             <%= image_tag car.pictures.first, class: "card-img-top" %>
            <% end %>
            <div class="card-body">
                <p class="card-text">
                <%= vinyl.artist%> <%= vinyl.genre%>
                </p>
                <p>
                $<%= vinyl.price%>
                </p>
                <%= link_to 'Explore', vinyl_path(vinyl.id), class: "btn btn-primary"%>
            </div>
        </div>
    </div>
    <% end %>
</div>